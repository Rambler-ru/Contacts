 * Search Bar *
 **************/

QToolBar#searchBar
{
	spacing: 4px;
	border-left: 0px;
	border-right: 0px;
	border-bottom: 0px;
	border-top: 2px;
	border-bottom: 1px;
	border-image: url(%IMAGES_PATH%/searchbarborder.png);
	min-height: 31px;
	max-height: 31px;
	height: 31px;
}

QToolButton
{
	margin-bottom: 1px;
}